{
  "title": "ROS2 中文指南",
  "description": "ROS2是ROS的下一个版本，目前已经发布",
  "language": "zh",
  "gitbook": "3.x.x",
  "plugins": [
    "github",
    "editlink",
    "prism",
    "downloadpdf",
    "yahei",
    "katex",
    "-search"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/BlueWhaleRobot/ros2"
    },
    "editlink": {
      "base": "https://github.com/BlueWhaleRobot/ros2/edit/master",
      "label": "编辑本页"
    },
    "sharing": {
      "weibo": true,
      "twitter": false,
      "facebook": false
    },
    "downloadpdf": {
      "base": "https://doc.bwbot.org/pdf/ros2",
      "label": "下载PDF",
      "multilingual": false
    },
    "fontSettings": {
      "theme": "white",
      "family": "msyh",
      "size": 2
    }
  },
  "pdf": {
    "pageNumbers": true,
    "fontSize": 12,
    "paperSize": "a4",
    "margin": {
      "right": 30,
      "left": 30,
      "top": 30,
      "bottom": 50
    }
  }
}
